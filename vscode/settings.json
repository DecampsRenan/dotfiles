{
    // =========================== EDITOR
    "editor.fontFamily": "Operator Mono, JetBrains Mono, Dank Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "editor.fontLigatures": true,
    "editor.lineHeight": 22,
    "editor.letterSpacing": 0.5,
    "editor.fontWeight": "400",
    "editor.cursorWidth": 3,
    "editor.suggestSelection": "first",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.dragAndDrop": false,
    "editor.fontSize": 16,
    "editor.renameOnType": true,
    "editor.codeLens": false,

    // =========================== EXPLORER
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    
    // =========================== WORKBENCH
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.indent": 16,
    
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        ".cache": true,
        ".history": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    
    "breadcrumbs.enabled": false,
    
    // =========================== TERMINAL
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "JetBrains Mono, Fira Code, Dank Mono, Menlo",
    "terminal.integrated.experimentalUseTitleEvent": true,
    "terminal.integrated.rendererType": "dom",
    
    // =========================== TELEMETRY
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    
    // =========================== ESLINT
    "eslint.alwaysShowStatus": true,
    "eslint.packageManager": "yarn",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
    ],
    
    "window.zoomLevel": 0,
    
    // =========================== PER LANGUAGE SETTING
    "[javascript]": {
        "editor.formatOnSave": false,
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false,
    },
    "[typescript]": {
        "editor.formatOnSave": false,
    },
    "[typescriptreact]": {
        "editor.formatOnSave": false,
    },
    
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.quoteStyle": "single",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.quoteStyle": "single",
    
    "git.autofetch": true,
    
    "multiCommand.commands": [
        {
            "command": "lintCodeAndStyle",
            "interval": 100,
            "sequence": [
                "eslint.executeAutofix",
                "stylelint.executeAutofix",
            ]
        }
    ],
    
    "search.exclude": {
        "**/*.history": true
    },
    
    "cSpell.spellCheckDelayMs": 500,
    "cSpell.userWords": [
        "passthrough"
    ],
    
    "clipboard-manager.preview": false,
    "clipboard-manager.snippet.enabled": false,
    "clipboard-manager.onlyWindowFocused": false,
    
    "nasc-touchbar.gitSync": true,
    "screencastMode.onlyKeyboardShortcuts": true,
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",

    "clipboard-manager.maxClips": 20,
    "todo-tree.tree.showScanModeButton": false,
    "terminal.external.osxExec": "iTerm.app",
    "material-icon-theme.folders.color": "#42a5f5",
    "material-icon-theme.activeIconPack": "react",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.hidesExplorerArrows": false,
    "material-icon-theme.opacity": 1,
    "material-icon-theme.saturation": 1,
    "cSpell.allowCompoundWords": true,
    "workbench.colorTheme": "Cobalt2",
    "workbench.sideBar.location": "right",
    "typescript.suggest.paths": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "extensions.ignoreRecommendations": false,
}